<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@drawable/main_background"
    tools:context=".hadethFragment.HadethFragment">

    <ImageView
        android:id="@+id/hadeth_img"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:adjustViewBounds="true"
        android:src="@drawable/hadith_header"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        />
    <LinearLayout
        android:id="@+id/Ahadeth_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hadeth_img"
        android:orientation="vertical"
        >
        <View
            android:id="@+id/devider1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/hadeth_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alahadeth"
            style="@style/item_text"
            android:layout_gravity="center"
            android:paddingVertical="6dp"
            />
        <View
            android:id="@+id/devider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gold"
            app:layout_constraintTop_toBottomOf="@id/devider1"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hadeth_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/Ahadeth_title"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/hadeth_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />


</androidx.constraintlayout.widget.ConstraintLayout>